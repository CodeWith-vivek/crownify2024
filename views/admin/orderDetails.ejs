<%- include("../../views/partials/admin/header2") %>

 

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order Details</h2>
                <p>Details for Order ID: <%= order.orderNumber %>
                </p>
            </div>
        </div>

        <div class="card">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                        <span>
                            <i class="material-icons text-primary" style="font-size: 24px;">calendar_today</i>
                            <b>
                                <%= new Date(order.orderedAt).toLocaleString() %>
                            </b>
                        </span> <br>
                        <small class="text-muted">Order ID: <%= order.orderNumber %></small>
                    </div>
                  
                </div>
            </header>

            <div class="card-body">
                <div class="row mb-50 mt-20 order-info-wrap">
                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle ">
                                <i class="material-icons text-primary" style="font-size: 24px;">person</i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Customer</h6>
                                <p class="mb-1">
                                    <%= order.userId.name %> <br>
                                        <%= order.userId.email %> <br>
                                        
                                </p>
                            </div>
                        </article>
                    </div>

                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle">
                                <i class="material-icons text-primary" style="font-size: 24px;">local_shipping</i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Order Info</h6>
                                <p class="mb-1">
                                    Payment: <%= order.paymentMethod %> <br>
                                        Status: <%= order.paymentStatus %>
                                </p>
                            </div>
                        </article>
                    </div>

                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle">
                            <i class="material-icons text-primary" style="font-size: 24px;">place</i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Deliver To</h6>
                            <p class="mb-1">
                                Address: <%= order.shippingAddress?.flatHouseCompany || 'N/A' %> <br>
                                    City: <%= order.shippingAddress?.city || 'N/A' %> <br>
                                        ZIP: <%= order.shippingAddress?.postalCode || 'N/A' %>
                            </p>
                            </div>
                        </article>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="/uploads/product-image/<%= orderItem.productImage %>"
                                                        width="40" height="40" class="img-xs" alt="Product">
                                                </div>
                                                <div class="info">
                                                    <%= orderItem.productName %> <br>
                                                        <% if(orderItem.variant) { %>
                                                            Color: <%= orderItem.variant.color %>, Size: <%=
                                                                    orderItem.variant.size %>
                                                                    <% } %>
                                                </div>
                                            </a>
                                        </td>
                                        <td>₹<%= orderItem.salePrice %>
                                        </td>
                                        <td>
                                            <%= orderItem.quantity %>
                                        </td>
                                        <td class="text-end">₹<%= orderItem.totalPrice %>
                                        </td>
                                    </tr>
                                    <tr>
                                    <td colspan="4">
                                        <article class="float-end">
                                            <p>*Shipping extra</p><br>
                                                <p>*Excluding coupon discount</p><br>


                                            <dl class="dlist">

                                                <dt>Total Amount:</dt>

                                                <dd> <b class="h5">₹<%= orderItem.totalPrice %></b> </dd>
                                            </dl>
                                            
                                        </article>
                                    </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("../../views/partials/admin/footer2") %>
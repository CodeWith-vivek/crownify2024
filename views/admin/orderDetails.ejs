<%- include("../../views/partials/admin/header2") %>

 

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order Details</h2>
                <p>Details for Order ID: <%= order._id %>
                </p>
            </div>
        </div>

        <div class="card">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                        <span>
                            <i class="material-icons md-calendar_today"></i>
                            <b>
                                <%= new Date(order.orderedAt).toLocaleString() %>
                            </b>
                        </span> <br>
                        <small class="text-muted">Order ID: <%= order._id %></small>
                    </div>
                    <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                        <select class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                            <option selected>
                                <%= orderItem.orderStatus %>
                            </option>
                            <option>Confirmed</option>
                            <option>Shipped</option>
                            <option>Delivered</option>
                            <option>Returned</option>
                        </select>
                        <a class="btn btn-primary" href="#">Save</a>
                        <a class="btn btn-secondary print ms-2" href="#"><i
                                class="icon material-icons md-print"></i></a>
                    </div>
                </div>
            </header>

            <div class="card-body">
                <div class="row mb-50 mt-20 order-info-wrap">
                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle ">
                                <i class="text-primary material-icons md-person"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Customer</h6>
                                <p class="mb-1">
                                    <%= order.userId.name %> <br>
                                        <%= order.userId.email %> <br>
                                </p>
                            </div>
                        </article>
                    </div>

                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle">
                                <i class="text-primary material-icons md-local_shipping"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Order Info</h6>
                                <p class="mb-1">
                                    Payment: <%= order.paymentMethod %> <br>
                                        Status: <%= order.paymentStatus %>
                                </p>
                            </div>
                        </article>
                    </div>

                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle">
                                <i class="text-primary material-icons md-place"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Deliver To</h6>
                                <p class="mb-1">
                                    Address: <%= order.shippingAddress.flatHouseCompany %> <br>
                                        City: <%= order.shippingAddress.city %> <br>
                                            ZIP: <%= order.shippingAddress.postalCode %>
                                </p>
                            </div>
                        </article>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="/uploads/product-image/<%= orderItem.productImage %>"
                                                        width="40" height="40" class="img-xs" alt="Product">
                                                </div>
                                                <div class="info">
                                                    <%= orderItem.productName %> <br>
                                                        <% if(orderItem.variant) { %>
                                                            Color: <%= orderItem.variant.color %>, Size: <%=
                                                                    orderItem.variant.size %>
                                                                    <% } %>
                                                </div>
                                            </a>
                                        </td>
                                        <td>₹<%= orderItem.salePrice %>
                                        </td>
                                        <td>
                                            <%= orderItem.quantity %>
                                        </td>
                                        <td class="text-end">₹<%= orderItem.totalPrice %>
                                        </td>
                                    </tr>
                                    <tr>
                                    <td colspan="4">
                                        <article class="float-end">
                                            <p>*shipping extra</p><br>


                                            <dl class="dlist">

                                                <dt>Total Amount:</dt>

                                                <dd> <b class="h5">₹<%= orderItem.totalPrice %></b> </dd>
                                            </dl>
                                            <dl class="dlist">
                                                <dt class="text-muted">Status:</dt>
                                                <dd>
                                                    <span class="badge rounded-pill alert-success text-success"><%= order.paymentStatus %></span>
                                                </dd>
                                            </dl>
                                        </article>
                                    </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("../../views/partials/admin/footer2") %>
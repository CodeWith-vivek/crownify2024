
    <%- include("../../views/partials/admin/header2") %>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title" style="color:#495057;">Customer Messages</h2>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <form method="GET" action="/admin/customerMessages">
                                <input type="text" name="search" placeholder="Search by email or message..."
                                    class="form-control" value="<%= search %>">
                            </form>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Message</th>
                                    <th>Submitted On</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (messages.length> 0) { %>
                                    <% messages.forEach((msg)=> { %>
                                        <tr>
                                            <td>
                                                <%= msg.name %>
                                            </td>
                                            <td>
                                                <%= msg.email %>
                                            </td>
                                            <td>
                                                <%= msg.phone %>
                                            </td>
                                            <td>
                                                <%= msg.message %>
                                            </td>
                                            <td>
                                                <% if (msg.submittedOn) { %>
                                                    <%= new Date(msg.submittedOn).toLocaleDateString() %>
                                                        <% } else { %>
                                                            N/A
                                                            <% } %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" style="text-align:center;">No messages found.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <% if (totalPages> 1) { %>
                            <% if (currentPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page=<%= currentPage - 1 %>&search=<%= search %>">&laquo;</a>
                                </li>
                                <% } %>
                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                                                <%= i.toString().padStart(2, '0' ) %>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=<%= currentPage + 1 %>&search=<%= search %>">&raquo;</a>
                                                </li>
                                                <% } %>
                                                    <% } %>
                    </ul>
                </nav>
            </div>
        </section>
        <%- include("../../views/partials/admin/footer2") %>
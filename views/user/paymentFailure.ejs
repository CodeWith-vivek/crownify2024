<%- include("../../views/partials/user/headerpaymentSuccess") %>

    <body>
        <div class="container-fluid crownify4 d-flex justify-content-center align-items-center">
            <img src="/assets/admin/images/logo/Crownify_logo_text.png" class="custom-logo">
        </div>

        <div class="wrapper" style="position: relative; overflow: hidden;">
            <!-- Background Blur -->
            <div style="
                    position: absolute; 
                    top: 0; 
                    left: 0; 
                    right: 0; 
                    bottom: 0; 
                    background: url('/assets/images/NavyBlurCap.webp') no-repeat center center; 
                    background-size: cover; 
                    filter: blur(8px); 
                    z-index: 0;">
            </div>

            <!-- Card Content -->
            <div class="card" style="
                    position: relative; 
                    z-index: 1; 
                    background-color: #fff; 
                    border-radius: 10px; 
                    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); 
                    padding: 20px; 
                    text-align: center;
                ">
                <div class="icon-container">

                    <svg class="icon" fill="none" stroke="red" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                        width="60" height="60">
                        <circle cx="12" cy="12" r="10" stroke="red" stroke-width="2" fill="#fdecea"></circle>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9L9 15M9 9l6 6"
                            stroke="red"></path>
                    </svg>
                </div>
                <h1>Order Placed Payment Failed</h1>

                <div class="order-details" style="margin-bottom: 30px;">
                    <div class="left-side">
                        <p>
                            <span class="label">Order ID</span>
                        </p>
                        <p>
                            <span class="label">Name</span>
                        </p>
                        <p>
                            <span class="label">Date</span>
                        </p>
                        <p>
                            <span class="label">Payment</span>
                        </p>
                        <p>
                            <span class="label">Payment Status</span>
                        </p>
                        <p>
                            <span class="label">Amount</span>
                        </p>
                    </div>
                    <div class="right-side">
                        <p>
                            <span class="value" id="orderNumber">
                                <%= order.orderNumber.slice(-4) %>
                            </span>
                        </p>
                        <p>
                            <span class="value">
                                <%= user.name || "N/A" %>
                            </span>
                        </p>
                        <p>
                            <span class="value">
                                <%= new Date(order.orderedAt).toLocaleDateString() %>
                            </span>
                        </p>

                        <p>
                            <span class="value">
                                <%= order.paymentMethod %>
                            </span>
                        </p>
                        <p>

                            <span class="value" style="color: red;">
                                <%= order.paymentStatus %>
                            </span>

                        </p>
                        <p>
                            <span class="value">INR <%= order.grandTotal.toFixed(2) %></span>
                        </p>
                    </div>
                </div>

                <a href="/orders" class="button" style="width: 320px;">View Order Details</a>
                <a href="/" style="width: 320px;" class="button">Continue Shopping</a>
            </div>
        </div>
        <div class="container-fluid crownify4 d-flex justify-content-center align-items-center">
            <img src="/assets/admin/images/logo/Crownify_logo_text.png" class="custom-logo">
        </div>
    </body>

    <%- include("../../views/partials/user/footerpaymentSuccess") %>
        <script src="/js/userBlockCheck.js"></script>